@{
    Layout = @"/Views/Shared/_Layout.cshtml";

    const string LogInURL = "/login";
    const string RegisterURL = "/register";
}

<div class="row justify-content-center">
    <div class="cols-5 mt-5">
        <div class="card login-logout-card">
            <div class="card-header">
                <ul class="nav nav-tabs nav-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="@LogInURL">
                            Log In
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@RegisterURL">
                            Register
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-10 my-5">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false);
    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) != -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}
